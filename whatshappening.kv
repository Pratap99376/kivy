<HomeScreen>:
    MDBoxLayout:
        orientation:'vertical'
        spacing: 10
        md_bg_color: 1,1,1,1

        MDBoxLayout:
            id: homebox
            orientation: 'horizontal'
            padding: 5
            spacing: 5
            size_hint: (1, .15)
            # height: 200

            MDIconButton:
                icon: "menu"
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                user_font_size: "20sp"
                valign: "middle"
                pos_hint: {"center_y":.5}

            MDLabel:
                font_name: "nevis"
                font_size: "20sp"
                text: "What's Happening?"
                # halign: "center"
                valign: "middle"
                theme_text_color: "Custom"
                pos_hint: {"center_y":.5}
                text_color: app.theme_cls.primary_color


            MDIconButton:
                icon: "account-box"
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                user_font_size: "20sp"
                valign: "middle"
                pos_hint: {"center_y":.5}

            MDIconButton:
                icon: "help-box"
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                user_font_size: "20sp"
                valign: "middle"
                pos_hint: {"center_y":.5}

        ScrollView:
            id: scroll
            size: root.size
            do_scroll_x: False
            do_scroll_y: True
            # size_hint: (1,None)
            # height: scrollbox.height

            MDBoxLayout:
                id: scrollbox
                orientation:'vertical'
                padding: 10
                spacing: 20
                size_hint: (1,None)
                height: self.minimum_height


                # WhatsHappeningImages:
                HeadImageTransition:

                TailImageTransition:

                MDCard:
                    orientation: "vertical"
                    radius: 10
                    size_hint_y: None
                    height: "120dp"
                    elevation: 20
                    ripple_behavior: True
                    md_bg_color: app.theme_cls.primary_color
                    on_press: app.sm.current = "second"

                    MDBoxLayout:
                        orientation: "horizontal"
                        padding: 20
                        spacing: 10
                        size_hint: 1,.7

                        MDLabel:
                            text: "What's Happening in"
                            theme_text_color: "Custom"
                            font_name: "nevis"
                            font_size: "20sp"
                            text_color: 1,1,1,1
                            pos_hint: {"center_x": .7}

                        MDIcon:
                            icon: "arrow-right"
                            font_size: "50sp"
                            size_hint: .2,1
                            theme_text_color: "Custom"
                            text_color: 1,1,1,1

                    MDBoxLayout:
                        orientation: "horizontal"
                        padding: 20
                        spacing: 5

                        Widget:
                            size_hint: .2,1

                        MDLabel:
                            text: "My Devices"
                            theme_text_color: "Custom"
                            font_name: "nevis"
                            font_size: "30sp"
                            text_color: 1,1,1,1
                            pos_hint: {"center_x": 1}

                        MDIcon:
                            icon: "cellphone-sound"
                            font_size: "50sp"
                            theme_text_color: "Custom"
                            text_color: 1,1,1,1
                            size_hint: .4,1

<ClassContent>:
    orientation: "vertical"
    spacing: 10
    padding: 10
    size_hint_y: None
    height: self.minimum_height

    MDGridLayout:
        rows: 2
        cols: 2
        spacing: 10
        size_hint_y: None
        height: self.minimum_height

        MDLabel:
            text: "Username: "
            theme_text_color: "Custom"
            font_name: "nevis"
            font_size: "20sp"
            text_color: app.theme_cls.primary_color
            size_hint_y: None
            height: "40dp"

        MDTextField:
            id: username
            line_color_normal:0,1,0,1
            line_color_focus: 1,1,0,1
            font_name: 'nevis'
            text_color: 0,1,0,1
            text_color_normal: 1,1,1,1
            # size_hint_x: .7
            size_hint_y: None
            height: "40dp"
            on_text_validate:
                print(self.text)
                app.sm.current_screen.class_dialog_close(app=app)

        MDLabel:
            text: "Password: "
            theme_text_color: "Custom"
            font_name: "nevis"
            font_size: "20sp"
            text_color: app.theme_cls.primary_color
            size_hint_y: None
            height: "40dp"

        MDTextField:
            id: password
            line_color_normal:0,1,0,1
            line_color_focus: 1,1,0,1
            font_name: 'nevis'
            text_color: 0,1,0,1
            text_color_normal: 1,1,1,1
            # size_hint_x: .7
            size_hint_y: None
            height: "40dp"
            on_text_validate:
                print(self.text)
                app.sm.current_screen.class_dialog_close(app=app)

            # size_hint: (1, None)
            # height: "40dp"


<DevicesScreen>:
    MDBoxLayout:
        orientation:'vertical'
        padding: 10
        spacing: 20
        ScrollView:
            id: scroll
            size: root.size
            do_scroll_x: False
            do_scroll_y: True

            MDBoxLayout:
                id: classbox
                orientation:'vertical'
                padding: 10
                spacing: 20
                size_hint: (1,None)
                height: self.minimum_height

        MDLabel:
            id: nodevice
            text: "No device added, Please add a new device by clicking on that plus button."
            font_name: "nevis"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            font_size: "20sp"
            halign: "center"
            size_hint: 1,None
            height: "500dp"

        MDFloatingActionButton:
            icon: "addition.png"
            background_normal: ""
            elevation: 0
            pos_hint: {"right": .97, "top": 0}
            on_press: root.show_class_dialog()



